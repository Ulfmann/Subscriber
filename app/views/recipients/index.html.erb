<% @recipients.each do |recipient| %>
  <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
    <td><%= recipient.name %></td>
    <td><%= recipient.email %></td>
    <td><%= recipient.notice %></td>
    <td><%= link_to 'Show', recipient %></td>
    <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
    <td><%= link_to 'Destroy', recipient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

