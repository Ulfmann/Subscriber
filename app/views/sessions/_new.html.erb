
<%= form_tag(login_path) do %>
    <div>
      <label for="name" style="float:left">Name:</label>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div>  
      <label for="password">Passwort:</label>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <br />
    <div>
      <%= submit_tag "Anmelden" %>
    </div>
<% end %>