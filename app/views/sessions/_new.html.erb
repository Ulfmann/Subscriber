<% if flash[:alert] %>
  <p id="notice"> <%= flash[:alert] %></p>
<% end %>

<%= form_tag(login_path) do %>
  <fieldset>
    <div>
      <label for="name" style="float:left">Name:</label>
      <%= text_field_tag :name, params[:name] %>
    </div>
    <div>  
      <label for="password">Passwort:</label>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div>
      <%= submit_tag "Anmelden" %>
    </div>
  </fieldset>
<% end %>