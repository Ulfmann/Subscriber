  <%= javascript_include_tag "jquery-1.6.3", "subscriber", "jquery-ui-1.8.16.custom.min", "jquery.easing.1.3" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="logo"></div>
  
  <div id="main">  
